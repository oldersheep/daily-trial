    <select id="findByUsernameAndPassword" resultType="com.xxx.notes.entity.UserEntity">
        select id,
                username,
                password,
                nick_name,
                create_time,
                update_time,
                del_flag
        from sys_user
        where username=#{username}
          and password=#{password}
    </select>

